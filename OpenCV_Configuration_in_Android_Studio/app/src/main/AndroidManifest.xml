<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cbs.example.opencv_configuration_in_android_studio">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Histograms_Compare_Activity"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".Histograms_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Image_crop_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".AKAZE_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".BRISK_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".ORB_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Media_HAAR_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".RTSP_HAAR_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Camera_HAAR_Activity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".RTSP_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Haar_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Harris_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Model_matching_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Contour_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Hough_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Laplace_Canny_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Gradient_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Edge_Filtering_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Filter_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Blurry_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Camera_preview"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Read_picture_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Mat_draw_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Bitmap_draw_Activity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>